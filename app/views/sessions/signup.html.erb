<div class="d-flex justify-content-center">
    <%= form_with url: "/google_signup", class:"w-25" do |f|%>
        <div class="form-group">
            <%= f.label :type, "Sign up as:" %>
            <%= select_tag(:user_type, options_for_select([["Please Select...", ""], ['Actor', 'Actor'], ['Director', 'Director'], ['Casting Director', 'Casting']]), class:"form-control", id:"user-type")%>
        </div>
        <br>
        <div class="form-group">
            <%= f.submit "Sign up with Google", class:"form-control btn btn-primary"%>
        </div>

    <% end %>
</div>

<div class="container text-center"><p>-Or-</p></div>

<div class="d-flex justify-content-center">
    <%= form_with url: '/signup', class:"w-25" do |f|%> 
        
        <%= f.hidden_field :user_type, value: "", class:"hidden-user-type" %>
        
        <div class="form-group">
            <%= f.label :name, "Name:" %>
            <%= f.text_field :name, class:"form-control" %>
        </div>

        <div class="form-group">
            <%= f.label :email, "Email Address:" %>
            <%= f.email_field :email, class:"form-control" %>
        </div>

        <div class="form-group">
            <%= f.label :phone_number, "Phone Number:" %>
            <%= f.telephone_field :phone_number, class:"form-control" %>
        </div>
    

        <div class="form-group">
            <%= f.label :password, "Password:" %>
            <%= f.password_field :password, class:"form-control" %>
        </div>

        <div class="form-group">
            <%= f.label :password_confirmation, "Confirm Password:" %>
            <%= f.password_field :password_confirmation, class:"form-control" %>
        </div>
        <br>

        <div class="actions">
            <%= f.submit "Sign up", class:"form-control btn btn-outline-secondary"%>
        </div>
    <% end %>
</div>
<%= javascript_pack_tag 'custom/sign_in' %>