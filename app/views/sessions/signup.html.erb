<div class="conatiner">
        <%= form_with url: "/google_signup", class:"google-form" do |f|%>
            <div class="form-group user-select w-25 mx-auto justify-content-center text-center">
                <%= f.label :type, "Sign up as:" %>
                <%= select_tag(:user_type, options_for_select([["Please Select...", ""], ['Actor', 'Actor'], ['Director', 'Director'], ['Casting Director', 'Casting']]), class:"form-control", id:"user-type", :required => true)%>
            </div>
        <div class="row">
            <div class="d-flex justify-content-end align-items-center col-5">
                <br>
                <div class="form-group">
                    <%= f.submit "Sign up with Google", class:"form-control btn btn-primary"%>
                </div>
            </div>
        <% end %>
    

            <div class="d-flex justify-content-center align-items-center col 2"><p>-Or- </p></div>

            <div class="d-flex justify-content-start col-5">
                <%= form_with url: '/signup' do |f|%> 
                    
                    <%= f.hidden_field :user_type, value: "", class:"hidden-user-type" %>
                    
                    <div class="form-group">
                        <%= f.label :name, "Name:" %>
                        <%= f.text_field :name, class:"form-control" %>
                    </div>

                    <div class="form-group">
                        <%= f.label :email, "Email Address:" %>
                        <%= f.email_field :email, class:"form-control" %>
                    </div>

                    <div class="form-group">
                        <%= f.label :phone_number, "Phone Number:" %>
                        <%= f.telephone_field :phone_number, class:"form-control" %>
                    </div>
                

                    <div class="form-group">
                        <%= f.label :password, "Password:" %>
                        <%= f.password_field :password, class:"form-control" %>
                    </div>

                    <div class="form-group">
                        <%= f.label :password_confirmation, "Confirm Password:" %>
                        <%= f.password_field :password_confirmation, class:"form-control" %>
                    </div>
                    <br>

                    <div class="actions">
                        <%= f.submit "Sign up", class:"form-control btn btn-outline-secondary"%>
                    </div>
                <% end %>
            </div>
    </div>
</div>
<%= javascript_pack_tag 'custom/sign_in' %>