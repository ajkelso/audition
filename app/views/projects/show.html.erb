<div class= "text-center">
  <h2><%=@project.title %></h2>
  <p><strong>Director:</strong> <%=link_to @project.director.name, director_path(@project.director), class:"text-decoration-none"%></p>
  <p><strong>Casting Director:</strong> <%=link_to @project.casting.name, casting_path(@project.casting), class:"text-decoration-none"%></p>
  <% if @project.seeking %>
          <strong>Currently Casting</strong>
      <% else %>
          <strong>Not Currently Casting</strong>
  <% end %>
  <% if project_creative?(@project) %>
    <%= link_to  "Edit", edit_project_path(@project), class:"text-decoration-none"%> <%= link_to  "Delete", project_path(@project), method: "delete", class:"text-decoration-none"%></p>
  <% end %>
</div>