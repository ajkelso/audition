<% if (@director || @casting) %>
    <div>
        <h1>Your Projects</h1>
        <ul>
        <%@projects.each do |project|%>
            <li><h3><%=project.title%>(<%=project.medium %>)</h3>
            <% if @casting %>
                <p>Director: <%=project.director.name %></p>
            <% end %>
            <% if @director %>
                <p>Casting Director: <%=project.casting.name%></p>  
            <% end %>
            <% if project.seeking %>
                <p>*Currently Casting</p>
            <% end %>
            <p><%= link_to  "Edit", edit_project_path(project)%> <%= link_to  "Delete", project_path(project), method: "delete" %></p>
            </li>
        <% end %>
        </ul>
        <div>
        <p>Add a new Project:</p>
            <%= render  "form" %>
        </div>
    </div>

<% else %>
    <div>
        <h1>Projects Currently Casting</h1>
        <div>
            <ul>
            <%@projects.each do |project|%>
                <li><h3><%=project.title%>(<%=project.medium %>)</h3>
                <p>Director: <%=project.director.name %></p>
                <p>Casting Director: <%=project.casting.name%></p>
                <% if project_creative?(project) %>
                    <%= link_to  "Edit", edit_project_path(project)%> <%= link_to  "Delete", project_path(project), method: "delete" %></p>
                <% end %>
                </li>
            <% end %>
            </ul>
        </div>
    </div>
<% end %>