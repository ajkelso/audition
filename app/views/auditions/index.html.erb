<div class="container text-center">
    <h2>Tracked Auditions</h2>
</div>
<div class="d-flex justify-content-center">
<% if current_user_model == Actor %>
    <div class="container">
        <div class="row d-flex justify-content-center">
            <% @auditions.each do |audition|%>
                <div class="col-3 border rounded m-1">
                    <h3><%= link_to  audition.project.title, audition_path(audition), class:"text-decoration-none" %></h3>
                    <p><strong>Type:</strong><%= audition.project.medium %></p>
                    <% if audition.location %>
                        <p><strong>Location:</strong>  <%= audition.location %></p>
                    <% end %>
                    <p><strong>Time:</strong>  <%= audition.time.strftime("%l:%M%P %A, %B %e") %></p>
                    
                </div>
            <% end %>
        </div>
    </div>
<% else %>
    <ul>
    <% @projects.each do |project|%>
        <% if !project.auditions.empty? %>  
            <li><h4><%=project.title%></h4></li>
            <ul>
            <%project.auditions.each do |audition|%>
                <li><%= link_to  audition.actor.name, audition_path(audition), class:"text-decoration-none" %></li>
            <% end %>
            </ul>
        <% end %>
    <% end %>
    </ul>
<% end %>
</div>
<div class="text-center">
    <%= link_to  "Add Audition", "/#{current_user_model.to_s.downcase}s/#{current_user.id}/auditions/new", class:"text-decoration-none" %>

</div>

