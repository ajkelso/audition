<div class="w-50 mx-auto">
    <div class="container text-center">
        
        <%= render  "auditions/show"%>
    
        <div class= "text-center">
            <%= link_to  "Edit Audition", edit_audition_path(@audition), class:"btn btn-outline-primary btn-block w-30" %>
            <%= link_to  "Delete Audition", audition_path, method: 'delete', class:"btn btn-outline-primary btn-block w-30" %>
        </div>
    
    </div>
    
    <% if @notes %>
        <div class="d-flex justify-content-center"><h4>Notes:</h4></div>
        <div class="d-flex justify-content-center">
            <div class="list-group">
            <% @notes.each do |n| %>  
                <li class="list-group-item">
                    <strong class="text-center"><%= n.updated_at.strftime("%B %e %l:%M%P")%></strong>
                    <br>
                    <%= n.content %>
                    <br>
                    <small><%= link_to  "Edit", edit_audition_note_path(@audition, n), class:"btn btn-sm btn-outline-secondary btn-block" %>  <%= link_to  "Delete", audition_note_path(@audition, n), method: "delete", class:"btn btn-sm btn-outline-secondary btn-block" %></small>
                </li>
            <% end %>
            </div>  
        </div>
    <% end %>

    <%= render  "auditions/note_form" %>

</div>
      

