<div audition_id=<%=@audition.id%> class="card audition-card">
    <div class="card-header <%=@audition.project.medium%>">
        <%=  @audition.project.title %>
    </div>

    <div class="card-body">
        
        <% if current_user_model != Actor %>
            <h5 class="card-title"><%= link_to @audition.actor.name, actor_path(@audition.actor), class:"text-decoration-none" %></h5>
        <% end %>
        <ul class="list-group list-group-flush">
            <% if @audition.location %>
                <li class="list-group-item"><strong>Location:</strong>  <%=@audition.location%></li>
            <% end %>
            <li class="list-group-item"><strong>Time:</strong>  <%= @audition.time.strftime("%l:%M%P %A, %B %e") %></li>
        </ul>
    </div>
</div>
