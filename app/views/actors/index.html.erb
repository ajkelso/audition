<div class="text-center">
    <h2>Actors</h2>
</div>
<% if !creative? %>
    <div class="d-flex justify-content-center">
        <ul>
            <% @actors.each do |actor|%>
                <li><%= link_to  actor.name, actor_path(actor) %></li>
            <% end %>
        </ul>
    </div>
<% else %>
    <div class="d-flex justify-content-center">
        <ul>
            <% @actors.each do |actor|%>
                <li><%= link_to  actor.name, actor_path(actor) %>
                <% if current_user.actors.include?(actor) %>
                    *
                <% end %>
                </li> 
            <% end %>
        </ul>
    </div>
    <p class="container text-center">* Indicates an auditioner in your tracked auditions</p>
<% end %>

