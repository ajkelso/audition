
<%= link_to  "Sign Up with Google", '/auth/google_oauth2' %>


<%= form_with model: @actor do |f|%>
    
    <div class="form-group">
        <%=label_tag(:user_type, "Sign in as:")%>
        <%= select_tag(:user_type, options_for_select([['Actor', 'Actor'], ['Director', 'Director'], ['Casting Director', 'CastingDirector']]))%>
    </div>

    <div class="form-group">
        <%= f.label :name, "Name:" %>
        <%= f.text_field :name %>
    </div>

    <div class="form-group">
        <%= f.label :email, "Email Address:" %>
        <%= f.email_field :email %>
    </div>

    <div class="form-group">
        <%= f.label :phone_number, "Phone Number:" %>
        <%= f.telephone_field :phone_number %>
    </div>
    <% if !@actor.id %>

        <div class="form-group">
            <%= f.label :password, "Password:" %>
            <%= f.text_field :password %>
        </div>

        <div class="form-group">
            <%= f.label :password_confirmation, "Confirm Password:" %>
            <%= f.password_field :password_confirmation %>
        </div>
    <% end %>

    <div class="actions">
        <%= f.submit %>
    </div>
<% end %>