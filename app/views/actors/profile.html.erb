<div class="container text-center">
    <h2><%=@actor.name%></h1>
</div>

<div class="container text-center">
    <h3>You have tracked <%=link_to pluralize(@actor.auditions.count, 'audition'), actor_auditions_path(@actor), class:"text-decoration-none"%>.</h3>
    <% if @actor.projects.length != 0 %>
        <%= pie_chart @actor.projects.group(:medium).count, colors: ["#4D6CFA", "#F038FF", "#70E4EF"] %>
    <% end %>
</div>