<div class="container text-center">
    <h2>Directors</h2>
</div>
<% if !creative? %>
    <div class="d-flex justify-content-center">
            <ul>
            <% @directors.each do |d|%>
                <li><%= link_to  d.name, director_path(d), class:"text-decoration-none" %>
                <% if current_user.directors.include?(d) %>
                    *
                <% end %>
                </li>
            <% end %>
            </ul>
    </div>
    <p class="text-center">* Indicates a Director for a Project in your tracked auditions</p>
<% else %>
    <div class="d-flex justify-content-center">
        <ul>
            <%@directors.each do |d|%>
                <li><%= link_to  d.name, director_path(d) %></li>
            <% end %>
        </ul>
    </div>
<% end %>
